@code {
    [Parameter]
    public bool IsDarkMode { get; set; }

    [Parameter]
    public EventCallback OnToggleTheme { get; set; }

    private async Task ToggleThemeAsync()
    {
        await OnToggleTheme.InvokeAsync(null);
    }
}

<nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
    <div class="container-fluid">
        <!-- Navbar brand or logo -->
        <a class="navbar-brand" href="/dashboard/home">
            <i class="bi bi-lightning-fill"></i> MyAdmin
        </a>

        <!-- Collapse button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar content -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav ms-auto align-items-center">
                <!-- Light/Dark mode toggle switch -->
                <li class="nav-item me-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch"
                               id="themeSwitch"
                               checked="@IsDarkMode"
                               @onchange="ToggleThemeAsync" />
                        <label class="form-check-label" for="themeSwitch">
                            @(IsDarkMode ? "Dark" : "Light")
                        </label>
                    </div>
                </li>

                <!-- Optional user avatar or dropdown -->
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="#">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" />
                        <span>David Grey</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

